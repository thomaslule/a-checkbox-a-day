form(method="post" data-id="#{task.id}")
    input(type="hidden" name="status" value="#{task.status}")
    input(type="hidden" name="list_type" value="#{task.list_type}")
    input(type="hidden" name="list_id" value="#{task.list_id}")
    .checkbox
        input(type="checkbox" checked=("#{task.status}" == 'done' ? "checked" : undefined))
    span.task-name #{task.name}
    span.action-buttons
        a.glyphicon.glyphicon-pencil.edit-item-button(href="#")
        a.glyphicon.glyphicon-remove.cancel-item-button(href="#")
        a.glyphicon.glyphicon-asterisk.restore-item-button(href="#")
        a.glyphicon.glyphicon-trash.delete-item-button(href="#")
    .input-group.edit-item-input
        input.form-control(type="text" name="name" value="#{task.name}" required="required")
        span.input-group-btn
            button.btn.btn-primary(type="submit") Modifier
            button.btn.cancel-edit-button(type="button") Annuler
